extends template

block content
    h1(style="color: rgb(35, 29, 145);") Vista de Productos
        div
            if products.length > 0
                table.table.table-striped.table-dark.table-bordered.border-dark
                    thead
                        tr
                            th(scope="col") Titulo
                            th(scope="col") Precio
                            th(scope="col") Imagen
                    tbody
                        each product in products
                            tr
                                th= product.title
                                th= product.price
                                th
                                    img.img-thumbnail(src=product.thumbnail, alt=product.title style="max-width:100px; max-height:100px")
            else
                p.alert.alert-danger No hay productos
            button.btn.btn-info(type="button" onclick="location.href='../'") Cargar Productos